mvn clean -DskipTests=true package
rm -rf tmp/mandi-docker

mkdir tmp/mandi-docker
cp -Rp target overrideProperties bin tmp/mandi-docker/
ln -sf docker.properties tmp/mandi-docker/overrideProperties/config/swf.properties

tag=`date +%Y%m%d%H%M%S`
echo 'MAILTO=""
* * * * * /mandi/bin/trigger PERSISTED_TASK_POLLER
*/5 * * * * /mandi/bin/trigger SUBSCRIPTION_RENEWAL_ALERT' >  tmp/mandi-docker/crontab.txt

echo "#!/bin/sh 
crond -bS;

/usr/bin/java -Xmx4g -XX:+HeapDumpOnOutOfMemoryError -XX:HeapDumpPath=tmp/java.hprof -XX:-OmitStackTraceInFastThrow -agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=6000", "-DPORT=6030 -Dswf.env=production -Dswf.pidfile=tmp/pid -Dderby.locks.waitTimeout=10 -DSystem.out.close=true -DSystem.err.close=true -DSystem.in.close=true -cp overrideProperties/:target/classes/:target/dependency/swf-plugin-mobilesignup-2.6-SNAPSHOT.jar:target/dependency/swf-plugin-ecommerce-2.6-SNAPSHOT.jar:target/dependency/swf-plugin-collab-2.6-SNAPSHOT.jar:target/dependency/* com.venky.swf.JettyServer; 

">tmp/mandi-docker/bin/service-start

chmod +x tmp/mandi-docker/bin/service-start


docker build -t mandi:${tag} .
docker image tag mandi:$tag mandi:latest 

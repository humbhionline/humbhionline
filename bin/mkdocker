mvn clean -DskipTests=true package
rm -rf tmp/mandi-docker

mkdir tmp/mandi-docker
cp -Rp .keystore/ target overrideProperties bin tmp/mandi-docker/
ln -sf docker.properties tmp/mandi-docker/overrideProperties/config/swf.properties

tag=`date +%Y%m%d%H%M%S`
echo 'MAILTO=""
* * * * * /mandi/bin/trigger PERSISTED_TASK_POLLER
*/5 * * * * /mandi/bin/trigger SUBSCRIPTION_RENEWAL_ALERT' >  tmp/mandi-docker/crontab.txt

echo "#!/bin/sh 
crond -bS;

/usr/bin/java -Xmx4g -XX:+HeapDumpOnOutOfMemoryError -XX:HeapDumpPath=tmp/java.hprof -XX:-OmitStackTraceInFastThrow -agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=6000", "-DPORT=6030 -Dswf.env=production -Dswf.pidfile=tmp/pid -Dderby.locks.waitTimeout=10 -DSystem.out.close=true -DSystem.err.close=true -DSystem.in.close=true -cp overrideProperties/:target/classes/:target/dependency/swf-plugin-mobilesignup-2.10.jar:target/dependency/swf-plugin-ecommerce-2.10.jar:target/dependency/swf-plugin-gst-2.10.jar:target/dependency/swf-plugin-bugs-2.10.jar:target/dependency/swf-plugin-mail-2.10.jar:target/dependency/swf-plugin-calendar-2.10.jar:target/dependency/swf-2.10.jar:target/dependency/swf-db-2.10.jar:target/dependency/swf-db-io-xml-2.10.jar:target/dependency/swf-db-io-json-2.10.jar:target/dependency/swf-db-io-xls-2.10.jar:target/dependency/swf-plugin-wiki-2.10.jar:target/dependency/swf-plugin-collab-2.10.jar:target/dependency/swf-plugin-templates-2.10.jar:target/dependency/swf-plugin-datamart-2.10.jar:target/dependency/swf-plugin-slideshow-2.10.jar:target/dependency/swf-plugin-beckn-2.10.jar:target/dependency/swf-plugin-hivemq-2.10.jar:target/dependency/swf-plugin-nats-2.10.jar:target/dependency/* com.venky.swf.JettyServer


">tmp/mandi-docker/bin/service-start

chmod +x tmp/mandi-docker/bin/service-start


docker build -t mandi:${tag} .
#docker image tag mandi:$tag mandi:latest 
docker container create --name production.${tag} mandi:${tag} 
